<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/cyan"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"/>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="150dp"
        android:layout_height="63dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="46dp">

        <EditText
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:editable="false"
            android:inputType="none"
            android:textColor="@color/bleucyan" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="322dp"
        android:layout_height="423dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/one"
            android:layout_width="96dp"
            android:layout_height="101dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onClick"
            app:srcCompat="@drawable/one" />

        <ImageView
            android:id="@+id/two"
            android:layout_width="113dp"
            android:layout_height="106dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onClick"
            app:srcCompat="@drawable/two" />

        <ImageView
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onClick"
            app:srcCompat="@drawable/three" />

        <ImageView
            android:id="@+id/four"
            android:layout_width="109dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onClick"
            app:srcCompat="@drawable/four" />

        <ImageView
            android:id="@+id/five"
            android:layout_width="113dp"
            android:layout_height="106dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onClick"
            app:srcCompat="@drawable/five" />


        <ImageView
            android:id="@+id/six"
            android:layout_width="119dp"
            android:layout_height="109dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onClick"
            app:srcCompat="@drawable/six" />


        <ImageView
            android:id="@+id/seven"
            android:layout_width="113dp"
            android:layout_height="106dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onClick"
            app:srcCompat="@drawable/seven" />


        <ImageView
            android:id="@+id/eight"
            android:layout_width="113dp"
            android:layout_height="106dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onClick"
            app:srcCompat="@drawable/eight" />


        <ImageView
            android:id="@+id/nine"
            android:layout_width="113dp"
            android:layout_height="106dp"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onClick"
            app:srcCompat="@drawable/nine" />

        <ImageView
            android:id="@+id/zero"
            android:layout_width="113dp"
            android:layout_height="106dp"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onClick"
            app:srcCompat="@drawable/zero" />

        <Button
            android:id="@+id/esit"
            android:layout_width="102dp"
            android:layout_height="94dp"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@color/black"
            android:onClick="onClick"
            android:text="="
            android:textColor="@color/bleucyan"
            android:textSize="50dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@color/black"
            android:onClick="onClick"
            android:text="Reset"
            android:textColor="@color/bleucyan" />


    </GridLayout>


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="381dp"
        android:layout_height="115dp"
        android:columnCount="4"
        android:rowCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/topla"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:background="@color/black"
            android:onClick="onClick"
            android:text="+"
            android:textColor="@color/bleucyan"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/cikar"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:background="@color/black"
            android:onClick="onClick"
            android:text="-"
            android:textColor="@color/bleucyan"
            android:textSize="50dp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/carp"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:background="@color/black"
            android:onClick="onClick"
            android:text="X"
            android:textColor="@color/bleucyan"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/bol"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:background="@color/black"
            android:onClick="onClick"
            android:text="/"
            android:textColor="@color/bleucyan"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="0" />
    </GridLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Enbiya Demir-"
        android:textColor="@color/bleucyan"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.296"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textsonuc"
        android:layout_width="128dp"
        android:layout_height="54dp"
        android:text=""
        android:textColor="@color/bleucyan"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>